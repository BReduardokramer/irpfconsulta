<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/irpfresultadoconsultabackground"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_margin="20sp"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="9sp"
        android:background="#000000"
        android:text="Resposta da Receita Federal"
        android:textColor="#00FF00"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_marginBottom="10sp"
        android:layout_weight="0"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/lblResultadoCPF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#000000"
        android:text="CPF: "
        android:textColor="#00FF00"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblResultadoNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5sp"
        android:background="#000000"
        android:text="Nome: "
        android:textColor="#00FF00"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_marginTop="10sp"
        android:layout_weight="0"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/lblResultadoBanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10sp"
        android:background="#000000"
        android:text="Banco: "
        android:textColor="#00FF00"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblResultadoAgencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5sp"
        android:background="#000000"
        android:text="Agência: "
        android:textColor="#00FF00"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblResultadoLote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5sp"
        android:background="#000000"
        android:text="Lote: "
        android:textColor="#00FF00"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblResultadoDisponivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5sp"
        android:background="#000000"
        android:text="Disponível a partir de: "
        android:textColor="#00FF00"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_marginTop="10sp"
        android:layout_weight="0"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/lblResultadoSituacaoRestituicao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20sp"
        android:background="#000000"
        android:text="Situação da Restituição: "
        android:textColor="#FF0000"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>